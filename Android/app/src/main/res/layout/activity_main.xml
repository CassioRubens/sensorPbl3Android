<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_gravity="center_vertical"
    tools:context=".ui.coffee.MainActivity">
   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:elevation="5dp"
       android:layout_marginBottom="10dp"
       android:id="@+id/btnTemperatura">
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center"
          android:layout_gravity="center">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Temperatura"
          android:gravity="center"
          android:textSize="15sp"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textColor="@color/colorPrimary"
          android:id="@+id/tvTempHorario"/>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:textStyle="bold"
             android:id="@+id/tvTempValor"/>
      </LinearLayout>
   </android.support.v7.widget.CardView>
   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:elevation="5dp"
       android:layout_marginBottom="10dp"
       android:id="@+id/btnUmidade">
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center"
          android:layout_gravity="center">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Umidade"
          android:gravity="center"
          android:textSize="15sp"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textColor="@color/colorPrimary"
          android:id="@+id/tvUmidHorario"/>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:textStyle="bold"
             android:id="@+id/tvUmidValor"/>
      </LinearLayout>
   </android.support.v7.widget.CardView>
   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:elevation="5dp"
       android:layout_marginBottom="10dp"
       android:id="@+id/btnPressao">
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_gravity="center">
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Pressão atmosférica"
             android:gravity="center"
             android:textSize="15sp"/>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:textColor="@color/colorPrimary"
             android:id="@+id/tvPresHorario"/>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:textStyle="bold"
             android:id="@+id/tvPresValor"/>
      </LinearLayout>
   </android.support.v7.widget.CardView>
   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:elevation="5dp"
       android:layout_marginBottom="10dp"
       android:id="@+id/btnLuminosidade">
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_gravity="center">
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Luminosidade"
             android:gravity="center"
             android:textSize="15sp"/>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:textColor="@color/colorPrimary"
             android:id="@+id/tvLumdHorario"/>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:textStyle="bold"
             android:id="@+id/tvLumdValor"/>
      </LinearLayout>
   </android.support.v7.widget.CardView>

   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/btnIntervalo"
       android:text="Intervalo"/>

</LinearLayout>